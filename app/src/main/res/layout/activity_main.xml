<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F3B5B5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listview_string"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="56dp"
        android:divider="@color/black"
        android:dividerHeight="5sp"
        android:listSelector="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/listview_int"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <ListView
        android:id="@+id/listview_int"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:divider="@color/black"
        android:dividerHeight="5sp"
        android:listSelector="#3DED3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <ListView
        android:id="@+id/listview_char"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:divider="@color/black"
        android:dividerHeight="5sp"
        android:listSelector="#EA54D4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview_string">

    </ListView>

    <ListView
        android:id="@+id/listview_double"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginStart="11dp"
        android:divider="@color/black"
        android:dividerHeight="5sp"
        android:listSelector="#F6644B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listview_char"
        app:layout_constraintTop_toBottomOf="@+id/listview_int">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>